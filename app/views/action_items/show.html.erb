<div class="container">

  <%= render partial: "shared/header"  %>

  <p id="notice"><%= notice %></p>

  <section class="show">
    <p>
      <strong>Action:</strong>
      <%= @action_item.action %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @action_item.category %>
    </p>

    <p>
      <strong>Priority:</strong>
      <%= @action_item.priority %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= @action_item.comment %>
    </p>

    <section class="show_links">
      <%= link_to 'Edit this Action Item', edit_action_item_path(@action_item) %>
    </section>
      
  </section>

  <%= render partial: "shared/navbar"  %>
</div>