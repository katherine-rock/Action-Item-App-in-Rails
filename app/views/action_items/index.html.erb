<p id="notice"><%= notice %></p>

<h1>Things To Do</h1>

<table>
  <thead>
    <tr>
      <th>Action</th>
      <th>Category</th>
      <th>Priority</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @action_items.each do |action_item| %>
      <tr>
        <td><%= action_item.action %></td>
        <td><%= action_item.category %></td>
        <td><%= action_item.priority %></td>
        <td><%= action_item.comment %></td>
        <td><%= link_to 'Show', action_item %></td>
        <td><%= link_to 'Edit', edit_action_item_path(action_item) %></td>
        <td><%= link_to 'Destroy', action_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<section class="link">
  <%= link_to 'Add New Action Item', new_action_item_path %>
</section>
