<div class="container">

  <table class="table">
    <thead>
      <tr>
        <th>Action</th>
        <th>Category</th>
        <th>Priority</th>
        <th class="desktop">Comment</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @action_items.each do |action_item| %>
        <tr>
          <td><%= link_to action_item.action, action_item %></td>
          <td><%= action_item.category %></td>
          <td><%= action_item.priority %></td>
          <td class="desktop"><%= action_item.comment %></td>
            <td><%= link_to 'View', action_item %></td>
            <td><%= link_to 'Edit', edit_action_item_path(action_item) %></td>
            <td><%= link_to 'Delete', action_item, method: :delete, data: { confirm: 'Are you sure you want to delete this action item? This will be permanently deleted' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

</div>
